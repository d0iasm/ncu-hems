<% include common/_header %>

<main>
  <section class="graph canvas-container">
    <h1>電力使用量</h1>
    <ul class="x-axis">
      <li class="unit">時間(h)</li>
      <li class="unit">日(day)</li>
      <li class="unit">月(month)</li>
    </ul>
    <canvas id="power-usage" class="canvas" height="150" width="450"></canvas>
  </section>
  <div class="powers">
    <section class="power canvas-container">
      <h1>電力使用量</h1>
      <canvas id="daily-power-usage" class="canvas" height="150" width="150"></canvas>
      <div class="caption">
        <em>50</em>
        <span>%</span>
      </div>
    </section>
    <section class="power canvas-container">
      <h1>電力代換算</h1>
      <canvas id="power-cost" class="canvas" height="150" width="150"></canvas>
      <div class="caption">
        <em>70</em>
        <span>%</span>
      </div>
    </section>
  </div>
</main>

<% include common/_footer %>
